<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wisen.wisenapp.btadv.BTAdvActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IsSupportPeri"
        android:id="@+id/btn_is_support_peri"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please press the button"
        android:id="@+id/tv_is_support_peri"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btn_is_support_peri"
        android:layout_toEndOf="@+id/btn_is_support_peri" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start ADV"
        android:id="@+id/btn_start_adv"
        android:layout_below="@+id/btn_is_support_peri"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan adv"
        android:id="@+id/btn_scan_adv"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="waiting for result"
        android:id="@+id/tv_scan_adv_result"
        android:layout_below="@+id/btn_scan_adv"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop ADV"
        android:id="@+id/btn_stop_adv"
        android:layout_alignTop="@+id/btn_start_adv"
        android:layout_toEndOf="@+id/tv_scan_adv_result" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Scan"
        android:id="@+id/btn_stop_scanadv"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btn_stop_adv" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Data"
        android:id="@+id/btn_adv_changeData"
        android:layout_alignTop="@+id/btn_stop_adv"
        android:layout_toEndOf="@+id/btn_stop_scanadv" />
</RelativeLayout>
