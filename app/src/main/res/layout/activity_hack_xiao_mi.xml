<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wisen.wisenapp.btsmart.xiaomi.HackXiaoMiActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Init"
        android:id="@+id/btn_write_sequence"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
 />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vibirate"
        android:id="@+id/btn_vib_xiaomi"
        android:layout_alignBottom="@+id/btn_write_sequence"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="color"
        android:id="@+id/btn_set_color"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btn_vib_xiaomi"
        android:layout_marginStart="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="battery"
        android:id="@+id/btn_read_battery_info"
        android:layout_below="@+id/btn_write_sequence"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/battery_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_read_battery_info"
        />

    <ListView
        android:id="@+id/characteristicListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/battery_info" >

    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserInfo"
        android:id="@+id/btn_read_user_info"
        android:layout_below="@+id/btn_vib_xiaomi"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="firmware"
        android:id="@+id/btn_read_firmware_version"
        android:layout_alignBottom="@+id/btn_read_user_info"
        android:layout_alignStart="@+id/btn_set_color" />


</RelativeLayout>
